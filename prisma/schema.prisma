generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  username        String
  email           String   @unique
  createdAt       DateTime @default(now())
}

model Detail {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String  @unique
  likes           String[] @db.ObjectId
}
